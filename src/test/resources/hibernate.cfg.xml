<?xml version="1.0"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory>
  <property name="hibernate.connection.driver_class">org.h2.Driver</property>
  <property name="hibernate.connection.url">jdbc:h2:mem:test</property>
  <property name="hibernate.connection.username">sa</property>
  <property name="hibernate.connection.password"/>
  <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
  <!-- In unit tests we suppose that everything is correct with the schema -->
  <property name="show_sql">false</property>
  <property name="generate_statistics">false</property>
  <property name="use_sql_comments">false</property>
  <!-- Shutting down logs doesn't work -->
  
  <property name="hibernate.current_session_context_class">org.hibernate.context.internal.ThreadLocalSessionContext</property>
  <property name="hibernate.hbm2ddl.auto">update</property>
  
  
  <mapping class="org.openbox.sf5.model.Settings"/>
  <mapping class="org.openbox.sf5.model.Satellites"/>
  <mapping class="org.openbox.sf5.model.Transponders"/>
  <mapping class="org.openbox.sf5.model.ValueOfTheCarrierFrequency"/>
  <mapping class="org.openbox.sf5.model.TheDVBRangeValues"/>
  <mapping class="org.openbox.sf5.model.SettingsConversion"/>
  <mapping class="org.openbox.sf5.model.SettingsSatellites"/>
  <mapping class="org.openbox.sf5.model.Users"/>
 </session-factory>
</hibernate-configuration>
